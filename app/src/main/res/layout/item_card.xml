<?xml version="1.0" encoding="utf-8" ?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="8dp"
    >


    <ImageView
        android:id="@+id/cardImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:tint="#6F000000"
        app:srcCompat="@drawable/city_photo"
        tools:ignore="UseAppTint" />

    <TextView
        android:id="@+id/activityText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:paddingTop="30dp"
        android:text="Bake pastries for you and your neighbor"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24"
        android:layout_gravity="center"
        android:scaleType="fitStart"
        android:layout_marginLeft="10dp"
        app:tint="@color/white"
        />

    <ImageView
        android:id="@+id/imageRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_arrow_forward_24"
        android:layout_gravity="center"
        android:scaleType="fitEnd"
        android:layout_marginRight="10dp"
        app:tint="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:paddingHorizontal="30dp"
            android:paddingVertical="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Cooking"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@drawable/rounded_corner"
            android:textSize="24sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="30dp"
            >
            <ImageView
                android:id="@+id/imgPersons1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/ic_baseline_person_outline_24"
                app:tint="@color/white"
                />

            <ImageView
                android:id="@+id/imgPersons2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/ic_baseline_person_outline_24"
                app:tint="@color/white"
                />

            <ImageView
                android:id="@+id/imgPersons3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/ic_baseline_person_outline_24"
                app:tint="@color/white"
                />

            <ImageView
                android:id="@+id/imgPersons4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/ic_baseline_person_outline_24"
                app:tint="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/imgMoney1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/ic_baseline_attach_money_24"
                app:tint="@color/white"
                />

            <ImageView
                android:id="@+id/imgMoney2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/ic_baseline_attach_money_24"
                app:tint="@color/white"
                />

            <ImageView
                android:id="@+id/imgMoney3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/ic_baseline_attach_money_24"
                app:tint="@color/white"
                />

            <ImageView
                android:id="@+id/imgMoney4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/ic_baseline_attach_money_24"
                app:tint="@color/white"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>