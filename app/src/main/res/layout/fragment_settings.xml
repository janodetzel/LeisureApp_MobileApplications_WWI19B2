<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsFragment">

    <LinearLayout
        android:id="@+id/rowType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:minHeight="51dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/settingsTypeText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:maxWidth="101dp"
            android:minWidth="100dp"
            android:text="Type"
            android:tint="@color/black" />


        <Spinner
            android:id="@+id/settingsTypeDropDown"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <Button
        android:id="@+id/btnClear"
        android:layout_width="238dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="158dp"
        android:text="Delete Favorites" />

    <LinearLayout
        android:id="@+id/rowCosts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/rowPersons"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:minHeight="51dp"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/settingsCostsText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:maxWidth="101dp"
            android:minWidth="100dp"
            android:text="Costs"
            android:tint="@color/black" />

        <ImageView
            android:id="@+id/settingsCosts1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="51dp"
            android:minWidth="50dp"
            android:src="@drawable/ic_baseline_attach_money_24"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/settingsCosts2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="51dp"
            android:minWidth="50dp"
            android:src="@drawable/ic_baseline_attach_money_24"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/settingsCosts3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="51dp"
            android:minWidth="50dp"
            android:src="@drawable/ic_baseline_attach_money_24"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/settingsCosts4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="51dp"
            android:minWidth="50dp"
            android:src="@drawable/ic_baseline_attach_money_24"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/settingsCostsDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:maxWidth="51dp"
            android:minWidth="50dp"
            android:src="@drawable/ic_baseline_clear_24"
            android:tint="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowPersons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/rowType"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:minHeight="51dp"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/settingsPersonsText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:maxWidth="101dp"
            android:minWidth="100dp"
            android:text="Participants"
            android:tint="@color/black" />

        <ImageView
            android:id="@+id/settingsPersons1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="51dp"
            android:maxHeight="51dp"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:src="@drawable/ic_baseline_person_outline_24"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/settingsPersons2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="51dp"
            android:maxHeight="51dp"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:src="@drawable/ic_baseline_person_outline_24"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/settingsPersons3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="51dp"
            android:maxHeight="51dp"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:src="@drawable/ic_baseline_person_outline_24"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/settingsPersons4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="51dp"
            android:maxHeight="51dp"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:src="@drawable/ic_baseline_person_outline_24"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/settingsPersonsDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:maxWidth="51dp"
            android:minWidth="50dp"
            android:src="@drawable/ic_baseline_clear_24"
            android:tint="@color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/rowCosts"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_marginBottom="25dp"
        android:text="Filter" />

</RelativeLayout>