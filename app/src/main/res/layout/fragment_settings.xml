<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="120dp"
    tools:context=".fragments.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/filterText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/rowCosts"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="25dp"
            android:text="Filter"
            android:textAlignment="center"
            android:textSize="30dp" />

        <LinearLayout
            android:id="@+id/rowCosts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/rowPersons"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corner"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/settingsCostsText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:maxWidth="101dp"
                android:minWidth="100dp"
                android:text="Costs"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:orientation="vertical"
                android:padding="10dp"
                android:paddingVertical="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/settingsCosts1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:maxWidth="51dp"
                        android:minWidth="50dp"
                        android:src="@drawable/ic_baseline_attach_money_24"
                        app:tint="@color/white" />

                    <ImageView
                        android:id="@+id/settingsCosts2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:maxWidth="51dp"
                        android:minWidth="50dp"
                        android:src="@drawable/ic_baseline_attach_money_24"
                        app:tint="@color/white" />

                    <ImageView
                        android:id="@+id/settingsCosts3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:maxWidth="51dp"
                        android:minWidth="50dp"
                        android:src="@drawable/ic_baseline_attach_money_24"
                        app:tint="@color/white" />

                    <ImageView
                        android:id="@+id/settingsCosts4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:maxWidth="51dp"
                        android:minWidth="50dp"
                        android:src="@drawable/ic_baseline_attach_money_24"
                        app:tint="@color/white" />

                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBarCosts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="4"
                    android:max="80"
                    android:progressBackgroundTint="@color/white"
                    android:progressTint="@color/blue"
                    android:thumbOffset="5dp"
                    android:thumbTint="@color/blue" />

            </LinearLayout>

            <ImageView
                android:id="@+id/settingsCostsDel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:maxWidth="51dp"
                android:minWidth="50dp"
                android:src="@drawable/ic_baseline_clear_24"
                app:tint="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowPersons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/rowPersons"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corner"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/settingsPersonsText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:maxWidth="101dp"
                android:minWidth="100dp"
                android:text="Participants"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:orientation="vertical"
                android:padding="10dp"
                android:paddingVertical="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/settingsPersons1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:maxWidth="51dp"
                        android:minWidth="50dp"
                        android:src="@drawable/ic_baseline_person_outline_24"
                        app:tint="@color/white" />

                    <ImageView
                        android:id="@+id/settingsPersons2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:maxWidth="51dp"
                        android:minWidth="50dp"
                        android:src="@drawable/ic_baseline_person_outline_24"
                        app:tint="@color/white" />

                    <ImageView
                        android:id="@+id/settingsPersons3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:maxWidth="51dp"
                        android:minWidth="50dp"
                        android:src="@drawable/ic_baseline_person_outline_24"
                        app:tint="@color/white" />

                    <ImageView
                        android:id="@+id/settingsPersons4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:maxWidth="51dp"
                        android:minWidth="50dp"
                        android:src="@drawable/ic_baseline_person_outline_24"
                        app:tint="@color/white" />

                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBarPersons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="4"
                    android:max="4"
                    android:progressBackgroundTint="@color/white"
                    android:progressTint="@color/blue"
                    android:thumbOffset="5dp"
                    android:thumbTint="@color/blue" />

            </LinearLayout>

            <ImageView
                android:id="@+id/settingsPersonsDel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:maxWidth="51dp"
                android:minWidth="50dp"
                android:src="@drawable/ic_baseline_clear_24"
                app:tint="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/rowType"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corner"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/settingsTypeText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:maxWidth="101dp"
                android:minWidth="100dp"
                android:text="Types"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <Spinner
                    android:id="@+id/settingsTypeDropDown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnClear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/grey"
            android:text="Delete Favorites"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>